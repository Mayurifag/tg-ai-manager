<aside class="sidebar left-sidebar">
    <div class="sidebar-top">
        {% block sidebar_back %}{% endblock %}
    </div>

    <div class="sidebar-content">
        {% block sidebar_info %}{% endblock %}
    </div>

    <!-- Navigation Links -->
    <div class="sidebar-nav">
        <a href="/settings" class="setting-option">
