{% extends "base.html.j2" %}

{% block title %}Action Logs{% endblock %}

{% block sidebar_back %}
<a href="/" class="back-link">‚Üê Back to Chats</a>
{% endblock %}

{% block content %}
<div class="header">
    <h1>Action Log</h1>
</div>

<div class="logs-container">
    <style>
        .logs-table {
            width: 100%;
            border-collapse: collapse;
            background: #1e1e20;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 1px 6px rgba(0, 0, 0, 0.4);
        }

        .logs-table th,
        .logs-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #333;
        }

        .logs-table th {
            background-color: #2a2a2c;
            font-weight: 600;
            color: #aaa;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .logs-table tr:last-child td {
            border-bottom: none;
        }

        .logs-table tr:hover {
            background-color: #262628;
        }

        .log-chat-link {
            text-decoration: none;
            color: #6ab7ff;
            font-weight: 500;
        }

        .log-chat-link:hover {
            text-decoration: underline;
        }

        .log-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .badge-read {
            background: #1e3a2a;
            color: #4caf50;
        }

        .badge-manual {
            background: #3a2a1e;
            color: #ff9800;
        }
    </style>

    {% if logs %}
    <table class="logs-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Action</th>
                <th>Chat</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
            {% for log in logs %}
            <tr>
                <td style="color: #888; font-size: 0.9rem; white-space: nowrap;">
                    {{ log.date.strftime('%Y-%m-%d %H:%M:%S') }}
                </td>
                <td>
                    <span class="log-badge badge-read">{{ log.action }}</span>
                </td>
                <td>
                    {% if log.link %}
                    <a href="{{ log.link }}" class="log-chat-link">
                        {{ log.chat_name }}
                    </a>
                    {% else %}
                    <a href="/chat/{{ log.chat_id }}" class="log-chat-link">
                        {{ log.chat_name }}
                    </a>
                    {% endif %}
                </td>
                <td>
                    <span class="log-badge badge-manual">{{ log.reason }}</span>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div style="text-align: center; color: #777; padding: 40px;">
        No actions recorded yet.
    </div>
    {% endif %}
</div>
{% endblock %}
